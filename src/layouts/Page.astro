---
const { additional_class } = Astro.props;
import "../styles/global.css";
import favicon from "../assets/images/favicon.ico";
import avatar from "../assets/images/avatar.png";
---

<html class="scroll-smooth" lang="en">
    <head>
        <title>glutesha</title>
        <link rel="icon" type="image/x-icon" href={favicon} />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta property="og:title" content="Glutesha" />
        <meta
            property="og:description"
            content="Goober, geek, tech obsessed freak"
        />
        <meta property="og:image" content={avatar.src} />
    </head>
    <body
        class={`text-white bg-neutral-950 flex flex-1 flex-col ${additional_class}`}
    >
        <slot />
    </body>
</html>
